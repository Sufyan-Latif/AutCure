<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".activities.ChildHomeActivity">

    <TextView
        android:id="@+id/tvAutcureLabel"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:padding="5dp"
        android:textColor="@color/colorWhite"
        />

    <ImageView
        android:id="@+id/imgLogout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:src="@drawable/logout"
        android:layout_alignParentEnd="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        app:civ_border_color="@color/colorBlack"
        app:civ_border_width="2dp"
        android:layout_below="@id/tvAutcureLabel"
        android:layout_centerHorizontal="true"
        android:src="@drawable/boy"
        />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_below="@id/tvAutcureLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/boy" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:text="Child"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="35sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:id="@+id/btnPlayGames"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button"
                android:drawableStart="@drawable/ic_game"
                android:gravity="center"
                android:padding="20dp"
                android:text="Play games"
                android:textAllCaps="false"
                android:textSize="20sp" />
            <Button
                android:id="@+id/btnViewTasks"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textAllCaps="false"
                android:drawableStart="@drawable/viewtask"
                android:background="@drawable/button"
                android:text="View Tasks"
                />

            <Button
                android:id="@+id/viewAnimations"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_performtask"
                android:background="@drawable/button"
                android:text="View Animations"
                />

            <Button
                android:id="@+id/btnUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textAllCaps="false"
                android:drawableStart="@drawable/ic_performtask"
                android:background="@drawable/button"
                android:text="@string/update_profile"
                />
        </LinearLayout>

    </ScrollView>



</RelativeLayout>