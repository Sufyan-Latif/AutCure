<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".teacherhome">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_presentation" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="170dp"
        android:text="Teacher"
        android:textSize="40sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnTeacherViewPerformance"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/ic_viewperformance"
        android:gravity="center"
        android:padding="20dp"
        android:text="View Performance"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnTeacherCommunication"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnTeacherViewPerformance"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/ic_telephone"
        android:gravity="center"
        android:padding="20dp"
        android:text="Communication"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnTeacherCommunication"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/ic_performtask"
        android:gravity="center"
        android:padding="20dp"
        android:text="Assign Tasks"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button3"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/ic_refresh"
        android:gravity="center"
        android:padding="20dp"
        android:text="Update Info"
        android:textAllCaps="false"
        android:textSize="20sp" />

</RelativeLayout>