<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".activities.ParentHomeActivity">

    <TextView
        android:id="@+id/tvAutcureLabel"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:padding="5dp"
        android:textColor="@color/colorWhite"
        />

    <ImageView
        android:id="@+id/imgLogout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:src="@drawable/logout"
        android:layout_alignParentEnd="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp"
        android:layout_below="@id/tvAutcureLabel"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_couple"
        />

    <ImageView
        android:id="@+id/imgParentProfile"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvAutcureLabel"
        android:layout_marginTop="18dp"
        android:visibility="invisible"
        android:src="@drawable/ic_couple"
        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:text="@string/parent"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="35sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:id="@+id/btnParentViewPerformance"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/button"
                android:drawableStart="@drawable/performancehome"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/view_performance"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnParentCommunication"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:drawableStart="@drawable/telephonehome"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/communication"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnParentUpdateInfo"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:drawableStart="@drawable/ic_refresh"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/update_info"
                android:textAllCaps="false"
                android:textSize="20sp" />
            <Button
                android:id="@+id/btnAssociateChildren"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:drawableStart="@drawable/ic_person_add_black_24dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/associate_children"
                android:textAllCaps="false"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>