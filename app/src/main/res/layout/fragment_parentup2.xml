<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parentup2">

    <EditText
        android:id="@+id/parentcall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttondesign"
        android:drawableLeft="@drawable/ic_telephone"
        android:ems="10"
        android:gravity="center"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/parentaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttondesign"
        android:drawableLeft="@drawable/ic_address"
        android:ems="10"
        android:gravity="center"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        >
        <ProgressBar
            android:id="@+id/parentprogressbarsignup"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/parentgendergroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:padding="10dp">
        <RadioButton
            android:id="@+id/parentgendermale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Male"
            android:textSize="25sp"
            />
        <RadioButton
            android:id="@+id/parentgenderfemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Female"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            />
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnparentup"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:background="@drawable/empty"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnparentback"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:background="@drawable/empty"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />



    </LinearLayout>

</LinearLayout>